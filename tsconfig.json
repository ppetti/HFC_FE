/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@Src/*": [
        "./src/*"
      ],
      "@Core/*": [
        "./src/app/core/*"
      ],
      "@Shared/*": [
        "./src/app/shared/*"
      ],
      "@Amministratore/*": [
        "./src/app/modules/amministratore/*"
      ],
      "@Distributore/*": [
        "./src/app/modules/distributore/*"
      ],
      "@Assets/*": [
        "./src/assets/*"
      ],
      "@Envirorments/*": [
        "./src/envirorments/*"
      ],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
